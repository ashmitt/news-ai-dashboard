# NewsFlow AI Dashboard - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys
# =============================================================================

# News API (https://newsapi.org/)
NEWS_API_KEY=your_news_api_key_here

# Google Gemini API (https://ai.google.dev/)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/newsflow_ai
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/newsflow_ai

# =============================================================================
# Server Configuration
# =============================================================================

# Backend Server Port
PORT=5000

# Node Environment
NODE_ENV=development
# Options: development, production, test

# =============================================================================
# Frontend Configuration
# =============================================================================

# Frontend Development Server Port
VITE_PORT=3000

# Backend API URL (for frontend)
VITE_API_URL=http://localhost:5000

# =============================================================================
# Security
# =============================================================================

# JWT Secret (for authentication if implemented)
JWT_SECRET=your_jwt_secret_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Optional Features
# =============================================================================

# Enable/Disable features
ENABLE_AI_SUMMARIZATION=true
ENABLE_USER_AUTHENTICATION=false
ENABLE_SAVED_ARTICLES=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Logging
# =============================================================================

# Log Level
LOG_LEVEL=info
# Options: error, warn, info, debug

# Enable Request Logging
ENABLE_REQUEST_LOGGING=true 